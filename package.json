{
  "name": "mibi-portal-server",
  "version": "1.2.0",
  "license": "MIT",
  "scripts": {
    "start": "node ./lib/main.js",
    "serve": "nodemon -e ts --exec \"npm run build && npm run test && node ./lib/main.js\"",
    "debug": "nodemon -e ts --exec \"npm run build && node --inspect-brk ./lib/main.js\"",
    "dependency-check:prod": "node_modules/.bin/npm-audit-ci-wrapper -t low -p",
    "dependency-check:qa": "node_modules/.bin/npm-audit-ci-wrapper -t low",
    "cp:view": "copyfiles -u 1 ./src/**/views/**/* ./lib",
    "cp:json": "copyfiles -u 1 ./src/**/*.json ./lib",
    "cp:all": "npm run cp:view && npm run cp:json",
    "tsc": "tsc",
    "build": "npm run clean &&  npm run tsc && npm run cp:all",
    "test": "jest --config=jest.json",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "clean": "rimraf lib/*",
    "lint": "tslint --project tsconfig.json --fix -c tslint.json 'src/**/*.ts'",
    "pretty": "prettier --write \"src/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "./hooks/commit-msg ./.git/COMMIT_EDITMSG"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.ts": [
        "npm run pretty",
        "npm run lint",
        "git add"
      ]
    },
    "ignore": [
      "src/**/__mocks__/*.ts",
      "src/**/__tests__/*.ts"
    ]
  },
  "private": true,
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "argon2": "^0.19.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.1",
    "compression": "^1.7.3",
    "config": "^1.29.4",
    "core-js": "^2.5.3",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "express-jwt": "^5.3.0",
    "fast-csv": "^2.4.1",
    "fs-extra": "^6.0.1",
    "fs-readfile-promise": "^3.0.1",
    "fuse.js": "^3.2.1",
    "handlebars": "^4.1.0",
    "helmet": "^3.15.0",
    "html5-history-api": "^4.2.8",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^8.1.0",
    "linebyline": "^1.3.0",
    "lodash": "^4.17.11",
    "moment": "^2.20.1",
    "mongo-express": "^0.51.2",
    "mongodb": "^3.0.10",
    "mongoose": "^5.4.10",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.9.1",
    "multer": "^1.3.0",
    "nodemailer": "^4.4.1",
    "processenv": "^1.1.0",
    "rxjs": "^6.2.1",
    "swagger-ui-express": "^4.0.2",
    "validate.js": "^0.12.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@angular/cli": "^6.0.8",
    "@types/app-root-dir": "^0.1.0",
    "@types/axios": "^0.14.0",
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.36",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/express-jwt": "^0.0.40",
    "@types/fs-readfile-promise": "^3.0.0",
    "@types/helmet": "0.0.42",
    "@types/jest": "^23.1.2",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/lodash": "^4.14.104",
    "@types/mongoose": "^5.0.7",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.6",
    "@types/node": "^10.3.6",
    "@types/nodemailer": "^4.3.4",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/xlsx": "0.0.36",
    "axios": "^0.18.0",
    "copyfiles": "^2.0.0",
    "husky": "^1.1.3",
    "jest": "^24.1.0",
    "lint-staged": "^8.0.4",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.2.2",
    "nodemon": "^1.14.12",
    "npm-audit-ci-wrapper": "^2.1.5",
    "prettier": "^1.4.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.2",
    "xlsx": "^0.14.1"
  }
}
