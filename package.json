{
  "name": "node-playground",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node ./lib/main.js",
    "serve": "nodemon -e ts --exec \"npm run build && node ./lib/main.js\"",
    "build:staging": "npm run build",
    "compile": "tsc",
    "build": "npm run clean && npm run compile  && npm run test",
    "test": "jest",
    "clean": "rimraf lib/*",
    "lint": "tslint --project tsconfig.json --fix -c tslint.json 'src/**/*.ts'"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.1",
    "config": "^1.29.4",
    "core-js": "^2.5.3",
    "express": "^4.15.4",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "mongodb": "^2.2.33",
    "mongoose": "^5.0.9",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/config": "0.0.34",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/lodash": "^4.14.104",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.0.7",
    "@types/node": "^9.4.2",
    "@types/winston": "^2.3.8",
    "copyfiles": "^1.2.0",
    "jest": "^22.4.0",
    "nodemon": "^1.14.12",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "2.5.3"
  }
}
